POST http://localhost:8081/users
Content-Type: application/json

{
    "firstName": "Jack",
    "lastName": "Progy",
    "username": "jack",
    "profilePicture": "img.png",
    "emailAddress": "jack@gmail.com",
    "password": "987654321"
}

